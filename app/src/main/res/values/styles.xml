<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="RoundButtonStyle">
        <item name="android:background">@drawable/link_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ProfileCardStyle">
        <item name="cardBackgroundColor">@color/cardColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/poppins_600</item>
        <item name="android:textAllCaps">false</item>]
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="ProjectCardStyle">
        <item name="cardBackgroundColor">@color/cardColor2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="TabStyle" parent="">
        <item name="tabBackground">@drawable/tab_item_bg</item>
<!--        <item name="tabBackground">@color/white</item>-->
        <item name="tabTextColor">@color/textColor2</item>
        <item name="tabSelectedTextColor">@color/textColor</item>
        <item name="tabIndicatorColor">@color/textColor</item>
        <item name="tabIconTint">@drawable/tab_icon_tint</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    

</resources>